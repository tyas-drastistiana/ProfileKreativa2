<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login.LupaPasswordActivity">

    <TextView
        android:id="@+id/LP_textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="161dp"
        android:text="Masukkan Email"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/ET_lp_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView8"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="1dp"
        android:ems="10"
        android:hint="***********@gmail.com"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ET_lp_email"
        android:layout_alignStart="@+id/ET_lp_email"
        android:layout_marginStart="7dp"
        android:layout_marginTop="11dp"
        android:text="Password akan di kirimkan ke email "
        android:layout_alignLeft="@+id/ET_lp_email"
        android:layout_marginLeft="7dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LP_textView6"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="23dp"
        android:text="masukkan email yangn sudah terdaftar" />

    <Button
        android:id="@+id/button2_lp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView7"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/bg_login"
        android:textColor="@color/colorS_Accent"
        android:onClick="onLupaPass"
        android:text="Lanjut"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp" />

</RelativeLayout>