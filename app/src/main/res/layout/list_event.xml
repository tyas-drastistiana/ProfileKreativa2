<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="2dp"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    android:padding="5dp"
    android:layout_marginRight="2dp"
    android:background="@color/gray_baground">

    <android.support.v7.widget.CardView
        android:id="@+id/CV_event"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray_baground"
        android:layout_margin="2dp"
        app:cardCornerRadius="4dp"
        app:elevation="10dp"
        >
        <LinearLayout
            android:id="@+id/li_event"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorS_Accent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/img_event_list"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:src="@drawable/profile"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="2dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:padding="5dp"
                android:contentDescription="@string/gambar"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:scrollbars="vertical"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="5dp"
                app:elevation="10dp">

                <View
                    android:layout_width="300dp"
                    android:layout_height="0.5dp"
                    android:layout_margin="2dp"
                    android:background="@color/text_gray"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/txt_event_ket"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="5dp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    app:fontFamily="@font/roboto_thin" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>